FROM node:20-alpine

# Install pnpm
RUN corepack enable pnpm

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json ./
COPY pnpm-lock.yaml* ./

# Install dependencies (ignore packageManager version mismatches in Docker)
RUN COREPACK_ENABLE_UNSAFE_CUSTOM_URLS=1 pnpm install || pnpm install --no-frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start Next.js development server with Turbopack
CMD ["pnpm", "dev", "--hostname", "0.0.0.0"]