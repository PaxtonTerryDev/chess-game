{
  "name": "server",
  "private": true,
  "scripts": {
    "dev": "go run main.go",
    "dev:watch": "air -c .air.toml",
    "build": "go build -o bin/server main.go",
    "lint": "gofmt -l .",
    "check-types": "go vet ./...",
    "docker:build": "docker build -f Dockerfile.dev -t chess-game-server:dev .",
    "docker:dev": "docker run --rm -p 8080:8080 -v $(pwd):/app chess-game-server:dev"
  }
}